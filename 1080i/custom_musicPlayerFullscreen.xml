				<control type="panel" id="8000">
		            <posx>222</posx>
		            <posy>10</posy>
		            <width>24-col</width>
	                <height>1-col</height>
		            <itemgap>0</itemgap>
		            <orientation>horizontal</orientation>
					<onright>8002</onright>
		            <itemlayout width="1-col" height="1-col">
