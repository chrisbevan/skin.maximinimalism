                            <control type="label">
                                <posx>13-col</posx>
                                <posy>0</posy>
                                <width>4-col-gutter</width>
                                <font>itemTitle</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>-</shadowcolor>
                                <label>$INFO[ListItem.Date]</label>
