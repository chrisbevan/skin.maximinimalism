                            <control type="label">
                                <posx>1-col</posx>
                                <posy>0</posy>
                                <width>10-col-gutter</width>
                                <font>itemTitle</font>
                                <textcolor>selected</textcolor>
                                <shadowcolor>-</shadowcolor>
                                <label>$INFO[ListItem.Label]</label>
