<window type="dialog" id="142">
	<defaultcontrol always="true">8000</defaultcontrol>
	<include>fadeInOut</include>

	<controls>
						
		<control type="group">
						
			<control type="group">
												
				<!--background-->
				<control type="group">
					<posx>0</posx>
					<posy>0</posy>							
											
					<!--overlay-->
					<control type="image">
						<posx>-200</posx>
						<posy>824</posy>
						<width>2500</width>
						<height>2-row</height>
						<texture>colors/black.png</texture>
						<colordiffuse>ccffffff</colordiffuse>
						<aspectratio>stretch</aspectratio>
						<!--animations-->
						<animation effect="slide" start="1920,0" end="0" delay="300" time="200">WindowOpen</animation>
					</control>
														
				</control>
		
				<!--title info-->
				<control type="group">	
					<posx>col-1-begin</posx>
					<posy>row-15-begin</posy>
					
					<!--animations-->
					<animation effect="fade" start="0" end="100" delay="900" time="300">WindowOpen</animation>
															
					<!--content description-->
					<control type="label">
						<posx>0</posx>
						<posy>18</posy>
						<width>3-col</width>
						<font>largeStrong</font>
						<textcolor>white</textcolor>
						<label>[B]$INFO[System.Time][/B]</label>
						<scroll>false</scroll>
					</control>
				
					<control type="label" id="20">
						<posx>3-col</posx>
						<posy>4</posy>
						<width>20-col</width>
						<font>regularStrong</font>
						<textcolor>white</textcolor>
						<label>[UPPERCASE]$INFO[Videoplayer.tvshowTitle,, â€¢ ]$INFO[Videoplayer.title][/UPPERCASE]</label>
						<scroll>false</scroll>
					</control>
					
					<control type="label">
						<posx>3-col</posx>
						<posy>34</posy>
						<width>17-col-gutter</width>
						<font>smallMedium</font>
						<textcolor>white</textcolor>
						<label fallback="31009">$INFO[Videoplayer.plot]</label>
						<scroll>true</scroll>
					</control>
																															
				</control>
			
				<!--dialog controls-->
				<control type="group">
			
					<posx>0</posx>
					<posy>row-17-begin</posy>
					
					<!--animations-->
					<animation effect="fade" start="0" end="100" delay="1200" time="300">WindowOpen</animation>
							
					<control type="image">
						<posx>-200</posx>
						<posy>-12</posy>
						<width>2500</width>
						<height>1-row</height>
						<texture>colors/white.png</texture>
						<colordiffuse>ffffffff</colordiffuse>
						<aspectratio>stretch</aspectratio>
					</control>
				
					<control type="list" id="8000">
						<posx>col-1-begin</posx>
						<posy>-10</posy>
						<width>10-col</width>
						<height>1-row</height>
						<itemgap>0</itemgap>
						<orientation>horizontal</orientation>

						<itemlayout width="150" height="43">

							<control type="label">
								<posx>55</posx>
								<posy>0</posy>
								<width>150</width>
								<align>center</align>
								<font>menuTitle</font>
								<textcolor>black</textcolor>
								<label>$INFO[ListItem.label]</label>
								<shadowcolor>-</shadowcolor>
							</control>

						</itemlayout>

						<focusedlayout width="150" height="43">

							<control type="label">
								<posx>55</posx>
								<posy>0</posy>
								<width>150</width>
								<align>center</align>
								<font>menuTitle</font>
								<textcolor>black</textcolor>
								<label>[ $INFO[ListItem.label] ]</label>
								<shadowcolor>-</shadowcolor>
							</control>

						</focusedlayout>

						<content>
							<item id="1">
								<label>Aspect</label>
								<thumb>-</thumb>
								<onclick>action(AspectRatio)</onclick>
							</item>
							<item id="2">
								<label>Audio</label>
								<thumb>-</thumb>
								<onclick>ActivateWindow(124)</onclick>
							</item>
							<item id="3">
								<label>Video</label>
								<thumb>-</thumb>
								<onclick>ActivateWindow(123)</onclick>
							</item>
							<item id="4">
								<label>Subtitles</label>
								<thumb>-</thumb>
								<onclick>Close</onclick>
								<onclick>XBMC.RunScript($INFO[Skin.String(SubtitlesPath)])</onclick>
							</item>
						</content>

					</control>
					
					<control type="label">
						<posx>col-21-begin</posx>
						<posy>-10</posy>
						<width>4-col</width>
						<font>menutitle</font>
						<textcolor>black</textcolor>
						<label>[B]$INFO[Videoplayer.time] / $INFO[Videoplayer.duration][/B]</label>
						<scroll>false</scroll>
						<shadowcolor>-</shadowcolor>
					</control>
				</control>			
			
			</control>
		</control>
				
		<!--debugging-->
		<include>Debug_Grid</include>
		<control type="label">
			<include>DialogID</include>
			<label>DialogFullscreenInfo.xml</label>
		</control>

	</controls>

</window>