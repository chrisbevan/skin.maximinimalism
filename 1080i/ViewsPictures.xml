<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!--Album selections-->
    <include name="viewPictureAlbumList">
        <control type="panel" id="51">
            <visible>Container.HasFolders</visible>
            <posx>0</posx>
            <posy>0</posy>
            <width>20-col</width>
            <height>11-row</height>
            <onleft>9000</onleft>
            <onright>60</onright>
            <ondown>51</ondown>
            <onup>51</onup>
            <pagecontrol>60</pagecontrol>
            <itemlayout height="1-row" width="10-col">
                <control type="image">
                    <posx>0</posx>
                    <posy>2</posy>
                    <width>10-col-gutter</width>
                    <height>53</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="24,0,24,0">UIControls/listitemNF.png</texture>
                    <bordersize>0</bordersize>
                    <colordiffuse>99FFFFFF</colordiffuse>
                </control>
                <control type="image">
                    <posx>4</posx>
                    <posy>4</posy>
                    <width>48</width>
                    <height>48</height>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.thumb]</texture>
                </control>
                <control type="label">
                    <posx>1-col</posx>
                    <posy>0</posy>
                    <width>8-col</width>
                    <font>itemTitle</font>
                    <textcolor>selected</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout height="1-row" width="10-col">
                <control type="image">
                    <posx>0</posx>
                    <posy>2</posy>
                    <width>10-col-gutter</width>
                    <height>53</height>
                    <aspectratio>stretch</aspectratio>
                    <texture border="24,0,24,0">UIControls/listitemFO.png</texture>
                    <bordersize>0</bordersize>
                    <colordiffuse>FFFFFFFF</colordiffuse>
                </control>
                <control type="image">
                    <posx>4</posx>
                    <posy>4</posy>
                    <width>48</width>
                    <height>48</height>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture fallback="colors/offblack.png" diffuse="masks/circle.png" border="0">$INFO[Listitem.thumb]</texture>
                </control>
                <control type="label">
                    <posx>1-col</posx>
                    <posy>0</posy>
                    <width>8-col</width>
                    <font>itemTitle</font>
                    <textcolor>black</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>
        </control>
    </include>
    <!--Album-->
    <include name="viewPicturePhoto">
        <control type="panel" id="52">
            <visible>!Container.HasFolders</visible>
            <posx>-6</posx>
            <posy>0</posy>
            <width>20-col</width>
            <height>12-row</height>
            <onleft>9000</onleft>
            <onright>60</onright>
            <ondown>51</ondown>
            <onup>51</onup>
            <pagecontrol>60</pagecontrol>
            <itemlayout height="5-col" width="5-col">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>5-col-gutter</width>
                    <height>5-col-gutter</height>
                    <aspectratio>scale</aspectratio>
                    <texture border="6">$INFO[Listitem.icon]</texture>
                    <bordersize>6</bordersize>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>5-col-gutter</width>
                    <height>5-col-gutter</height>
                    <texture>backgrounds/vignette.png</texture>
                    <colordiffuse>ffffffff</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
            </itemlayout>
            <focusedlayout height="5-col" width="5-col">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>5-col-gutter</width>
                    <height>5-col-gutter</height>
                    <aspectratio>scale</aspectratio>
                    <texture border="6">$INFO[Listitem.icon]</texture>
                    <bordertexture border="6">colors/selected.png</bordertexture>
                    <bordersize>6</bordersize>
                </control>
            </focusedlayout>
        </control>
    </include>
</includes>