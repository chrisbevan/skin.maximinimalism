<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <include>modalDialog</include>
        <control type="group">
            <posx>col-1-begin</posx>
            <posy>row-1-begin</posy>
            <control type="image">
                <posx>4-col</posx>
                <posy>row-2-begin</posy>
                <width>16-col</width>
                <height>11-row</height>
                <texture>$INFO[listitem.thumb]</texture>
            </control>
            <control type="panel" id="5">
                <posx>0</posx>
                <posy>14-row</posy>
                <width>24-col</width>
                <height>190</height>
                <itemlayout width="12-col" height="36">
                    <control type="label">
                        <posx>0</posx>
                        <width>4-col-gutter</width>
                        <info>ListItem.Label</info>
                        <font>regularSemibold</font>
                    </control>
                    <control type="label">
                        <posx>4-col</posx>
                        <width>8-col-gutter</width>
                        <align>left</align>
                        <info>ListItem.Label2</info>
                        <font>regular</font>
                    </control>
                </itemlayout>
                <focusedlayout width="12-col" height="36">
                    <control type="label">
                        <posx>0</posx>
                        <width>4-col-gutter</width>
                        <info>ListItem.Label</info>
                        <font>regularSemibold</font>
                    </control>
                    <control type="label">
                        <posx>4-col</posx>
                        <width>8-col-gutter</width>
                        <align>left</align>
                        <info>ListItem.Label2</info>
                        <font>regular</font>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <!--debugging-->
        <include>DebugGrid</include>
        <control type="label">
            <include>DialogID</include>
            <label>DialogPictureInfo.xml</label>
        </control>
    </controls>
</window>