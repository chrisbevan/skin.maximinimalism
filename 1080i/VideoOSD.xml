<?xml version="1.0" encoding="UTF-8"?>
<window>

	<defaultcontrol always="true">8000</defaultcontrol>
	<include>fadeInOut</include>

	<controls>						
		<control type="group">
			
			<!--fade out if audio / video menu active-->
			<animation type="Conditional" condition="Window.IsActive(osdvideosettings) | Window.IsActive(osdaudiosettings)">
				<effect type="fade" start="100" end="0" time="200" tween="sine" easing="in" />
			</animation>
											
			<!--background-->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>							
										
				<!--overlay-->
				<control type="image">
					<posx>-200</posx>
					<posy>824</posy>
					<width>2500</width>
					<height>2-row</height>
					<texture>colors/black.png</texture>
					<colordiffuse>ccffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
													
			</control>
	
			<!--title info-->
			<control type="group">	
				<posx>col-1-begin</posx>
				<posy>row-15-begin</posy>
															
				<!--content description-->
				<control type="label">
					<posx>0</posx>
					<posy>12</posy>
					<width>3-col</width>
					<font>largeStrong</font>
					<textcolor>selected</textcolor>
					<label>[B]$INFO[System.Time(hh:mm)][/B]</label>
					<scroll>false</scroll>
				</control>
			
				<control type="label" id="20">
					<posx>3-col</posx>
					<posy>0</posy>
					<width>21-col</width>
					<font>regularStrong</font>
					<textcolor>selected</textcolor>
					<label>[UPPERCASE]$INFO[Videoplayer.tvshowTitle,, • ]$INFO[Videoplayer.title][/UPPERCASE]</label>
					<scroll>false</scroll>
				</control>
				
				<control type="label">
					<posx>3-col</posx>
					<posy>50</posy>
					<width>21-col</width>
					<height>30</height>
					<font>small</font>
					<textcolor>selected</textcolor>
					<label fallback="31009">$INFO[Videoplayer.plot]</label>
					<scroll>true</scroll>
					<scrollspeed>60</scrollspeed>
				</control>
																														
			</control>
		
			<!--dialog controls-->
			<control type="group">
		
				<posx>0</posx>
				<posy>row-17-begin</posy>
									
				<control type="image">
					<posx>-200</posx>
					<posy>-12</posy>
					<width>2500</width>
					<height>1-row</height>
					<texture>colors/selected.png</texture>
					<colordiffuse>ffffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				
				<control type="image">
					<posx>0</posx>
					<posy>45</posy>
					<width>fullscreenWidth</width>
					<height>52</height>
					<texture>colors/black.png</texture>
					<colordiffuse>ccffffff</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			
				<control type="panel" id="8000">
					<posx>258</posx>
					<posy>-10</posy>
					<width>14-col</width>
					<height>1-row</height>
					<itemgap>0</itemgap>
					<ondown>8001</ondown>
					<orientation>horizontal</orientation>

					<itemlayout width="160" height="43">

						<control type="label">
							<posx>55</posx>
							<posy>0</posy>
							<width>160</width>
							<align>left</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>$INFO[ListItem.label]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</itemlayout>

					<focusedlayout width="160" height="43">

						<control type="label">
							<posx>42</posx>
							<posy>0</posy>
							<width>160</width>
							<align>left</align>
							<font>menuTitle</font>
							<textcolor>black</textcolor>
							<label>[ $INFO[ListItem.label] ]</label>
							<shadowcolor>-</shadowcolor>
						</control>

					</focusedlayout>

					<content>
						<!--
						<item id="1">
							<label>31116</label>
							<thumb>-</thumb>
							<onclick>action(aspectratio)</onclick>
						</item>
						-->
						<item id="2">
							<label>292</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(124)</onclick>
						</item>
						<item id="3">
							<label>291</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(123)</onclick>
						</item>
						<item id="4">
							<visible>System.HasMediaDVD + VideoPlayer.HasMenu</visible>
							<label>31140</label>
							<thumb>-</thumb>
							<onclick>PlayerControl(ShowVideoMenu)</onclick>
						</item>
						<item id="5">
							<label>287</label>
							<thumb>-</thumb>
							<onclick>Close</onclick>
							<onclick>ActivateWindow(SubtitleSearch)</onclick>
						</item>
						<item id="6">
							<label>298</label>
							<thumb>-</thumb>
							<onclick>ActivateWindow(125)</onclick>
						</item>
					</content>

				</control>
								
				<control type="label">
					<posx>1820</posx>
					<posy>-10</posy>
					<width>6-col</width>
					<font>menutitle</font>
					<align>right</align>
					<textcolor>black</textcolor>
					<label>$LOCALIZE[180] $INFO[Videoplayer.time] / $INFO[Videoplayer.duration]</label>
					<scroll>false</scroll>
					<shadowcolor>-</shadowcolor>
				</control>
				
				<!--player controls-->
				<control type="panel" id="8001">
		            <posx>288</posx>
		            <posy>35</posy>
		            <width>24-col</width>
	                <height>1-col</height>
		            <itemgap>0</itemgap>
		            <orientation>horizontal</orientation>
					<onup>8000</onup>
		            <itemlayout width="1-col" height="1-col">
						<control type="label">
	                        <posx>26</posx>
	                        <posy>0</posy>
	                        <width>1-col</width>
	                        <height>1-col</height>
	                        <font>symbol</font>
	                        <textcolor>selected</textcolor>
	                        <shadowcolor>-</shadowcolor>
	                        <label>$INFO[ListItem.label]</label>
	                    </control>
	                </itemlayout>
	                <focusedlayout width="1-col" height="1-col">
	                    <control type="image">
	                        <posx>19</posx>
	                        <posy>18</posy>
	                        <width>36</width>
	                        <height>36</height>
	                        <aspectratio scalediffuse="false">scale</aspectratio>
	                        <texture diffuse="masks/circle.png" border="1">colors/selected.png</texture>
	                        <bordersize>0</bordersize>
	                        <colordiffuse>ffFFFFFF</colordiffuse>
	                    </control>
						<control type="label">
	                        <posx>26</posx>
	                        <posy>0</posy>
	                        <width>1-col</width>
	                        <height>1-col</height>
	                        <font>symbol</font>
	                        <textcolor>black</textcolor>
	                        <shadowcolor>-</shadowcolor>
	                        <label>$INFO[ListItem.label]</label>
	                    </control>
	                </focusedlayout>
		            <content>
		                <item id="1">
				            <description>Previous</description>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(previous)</onclick>
		                </item>
		                <item id="2">
							<description>Rewind</description>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(rewind)</onclick>
		                </item>
		                <item id="3">
							<description>Stop</description>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(stop)</onclick>
		                </item>
		                <item id="4">
							<description>Play/Pause</description>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(play)</onclick>
		                </item>
		                <item id="5">
							<description>Fast forward</description>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(forward)</onclick>
		                </item>
						<item id="6">
							<description>Next Chapter</description>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(next)</onclick>
		                </item>
						<item id="7">
							<description>Record (PVR only)</description>
							<visible>Player.CanRecord</visible>
		                    <label></label>
		                    <thumb>-</thumb>
		                    <onclick>PlayerControl(record)</onclick>
		                </item>
		            </content>
		        </control>
			</control>			
		
		</control>
				
		<!--debugging-->
		<include>DebugGrid</include>
		<control type="label">
			<include>DialogID</include>
			<label>VideoOSD.xml</label>
		</control>

	</controls>
</window>